<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.whu.irlab.irep.base.mapper.system.LoginCountMapper" >
    <resultMap id="BaseResultMap" type="cn.edu.whu.irlab.irep.base.entity.system.LoginCount" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="total" property="total" jdbcType="INTEGER" />
    </resultMap>
    <sql id="Base_Column_List" >
    id,total
    </sql>
    <select id="getLoginCount"  resultMap="BaseResultMap">
        select id, total from total_statistics;
    </select>

    <update id="updateLoginCount">
        update total_statistics set total = total + 1
    </update>

</mapper>